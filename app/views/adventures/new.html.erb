<h1>New Adventure</h1>


<%= form_for @adventure do |f| %>
  <%= f.label :title %></br>
  <%= f.text_field :title %></br>
  <%= f.label :author %></br>
  <%= f.text_field :author %></br>
  <%= f.fields_for :pages, @adventure.pages.build do |b| %>
    <%= b.label :page_details %></br>
    <%= b.text_field :name, placeholder: "Page Name" %></br>
    <%= b.text_field :text, placeholder: "Page Text" %></br>
  <% end %>
  <%= f.submit "Create Adventure" %>
<% end %>
